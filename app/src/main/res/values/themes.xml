<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.XChange" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="ButtonGrey">
        <item name="android:background">@drawable/bg_button_grey</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ButtonDarkGreyWithBorders">
        <item name="android:background">@drawable/bg_button_dark_grey</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/grey</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>

        <item name="boxStrokeColor">@color/grey</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="DropDownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="boxBackgroundColor">@color/middle_grey</item>
        <item name="colorControlActivated">@color/middle_grey</item>

        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="DropDownElement" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColor">@color/white</item>

        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAreaLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/grey</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>

        <item name="boxStrokeColor">@color/grey</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="TextAreaElement" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/light_grey</item>
        <item name="backgroundColor">@color/light_grey</item>
    </style>

    <style name="CardText">
        <item name="android:textColor">@color/black</item>

        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CardTitle" parent="CardText">
        <item name="fontFamily">@font/roboto_medium_italic</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CardModelTitle" parent="CardText">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SupplierHighlight" parent="CardText">
        <item name="android:textColor">@color/blue</item>
    </style>
    
    <style name="CardStyle">
        <item name="cardBackgroundColor">@color/light_grey</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="RequestCardStyle">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="CardDataStyle">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RequestTitleStyle">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardButtons">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="NotificationTextStyle">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchViewStyle">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>